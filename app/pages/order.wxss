.half {
  height: 50%;
  padding: 40rpx;

  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: stretch;

  /* for .mask */
  position: relative;
}

.mask {
  position: absolute;
  z-index: 10;
  width: 100%;
  height: 100%;
  background-color: rgba(247, 247, 247, 0.9)
}

.page > .half:first-child {
  margin: 40rpx 20px 20rpx 20rpx;
}

.page > .half:last-child {
  margin: 20rpx 20px 40rpx 20rpx;
}

.half image {
  flex-grow: 1;
  flex-shrink: 1;
}

.half button {
  flex-grow: 0;
  flex-shrink: 0;

  width: 80%;
}
