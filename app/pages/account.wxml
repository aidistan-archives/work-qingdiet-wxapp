<view class="page">
  <view class="page__hd">
    <image src="{{userInfo.avatarUrl}}"></image>
  </view>


  <view class="page__bd">
    <view class="weui-cells__title">个人信息</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">出生日期</view>
        </view>
        <view class="weui-cell__bd">
          <picker mode="date" value="{{user.birthday}}" start="1921-07-01" end="2017-01-01" bindchange="bindBirthdayChange">
            <view class="weui-input">{{user.birthday ? user.birthday : ''}}</view>
          </picker>
        </view>
      </view>
    </view>

    <view class="weui-cells__title">地址管理</view>
    <view class="weui-cells weui-cells_after-title">
      <view wx:for="{{addresses}}" wx:key="id" class="weui-cell weui-cell_access" data-address-id="{{item.id}}" bindtap="bindAddressEdit">
        <view class="weui-cell__bd">
          <view>{{item.consignee}} {{item.mobile}}</view>
          <view class="address__detail">{{item.province}}{{item.city}}{{item.district}}{{item.town}}{{item.detail}}</view>
        </view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
      <view class="weui-cell weui-cell_access weui-cell_link" bindtap="bindAddressCreate">
        <view class="weui-cell__bd">添加地址</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
    </view>
  </view>


  <view class="page__ft">
    <view class="weui-footer">
      <view class="weui-footer__text">Copyright © 2017 QingDiet Team</view>
    </view>
  </view>
</view>
