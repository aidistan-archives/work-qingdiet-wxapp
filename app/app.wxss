@import "vendor/weui.wxss";

/**
 * Supplementary for built-in
 */

button[type="secondary"] {
  color: #FFFFFF;
  background-color: #2880D7;
}

button[type="secondary"][plain] {
  color: #2880D7;
  border: 1px solid #2880D7;
  background-color: transparent;
}

button[type="secondary"][disabled] {
  background-color:#82B7EB;
}

button[type="secondary"][plain][disabled] {
  color: rgba(0, 0, 0, 0.2);
  border-color: rgba(0, 0, 0, 0.2);
  background-color: transparent;
}

/**
 * Supplementary for WeUI
 */

.weui-btn_spacing {
  margin-left: 15px;
  margin-right: 15px;
}

.weui-cell_slider {
  padding-top: 5rpx;
  padding-bottom: 5rpx;
}

.weui-placeholder {
  color: #888888;
}

/**
 * Global styles
 */

page {
  background-color: #F8F8F8;
  font-size: 23rpx;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;

  height: 100%;
}

.page {
  height: 100%;
  
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
}
